extend ../layout.pug

block main
    .container
        .page
            h1 Chatt

            .row
                .col-md-6
                    <form id='connectform'>
                        <div class="input-group">
                            <input class='form-control' type='text' id='nickname' placeholder='nickname'>
                            <span class="input-group-btn">
                                <input class='btn btn-primary' type='button' id='connect' value='Anslut' disabled>
                            </span>
                        </div>
                    </form>
                    <form id='messageform' class='messageform'>
                        <div class="input-group">
                            <input class='form-control' type='text' id='message' placeholder='meddelande'>
                            <span class="input-group-btn">
                                <input class='btn btn-primary' type='button' id='messagebtn' value='Skicka'>
                                <input class='btn btn-danger' type='button' id='disconnectbtn' value='Koppla ner'>
                            </span>
                        </div>
                    </form>

            .row
                .col-md-2
                    h3 Klienter
                    .well.clientwell#clientarea

                .col-md-6
                    h3 Meddelanden
                    .well.msgwell#msgarea



block scripts
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js", integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa", crossorigin="anonymous")
    script(src="/javascripts/chatclient.js")
